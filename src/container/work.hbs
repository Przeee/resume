{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        <section>
            {{#with main}}
                    {{> title data="Work history" big=true}}
                    <div>
                        <ul>
                            {{#each works}}
                                <li>
                                    <div>{{position}}</div>

                                    <br>

                                    <div>{{duration.from}} - 
                                        {{#if duration.to}}
                                        {{duration.to}}
                                        {{else}}
                                         (Now working) 
                                        {{/if}}
                                    </div>

                                    <br>

                                    <div>
                                        {{#if company.url}}
                                            {{> link href=company.url text=company.name blank=true line=null noLine=true}}
                                        {{else}}
                                            <b>{{company.name}}</b>
                                        {{/if}}
                                    </div>

                                    <br>
                                    <br>

                                    <div><strong>Projects ({{projectAmount}})</strong></div>

                                    <br>

                                    <ul>
                                        {{#each projects}}
                                        <li>
                                            <div>{{> link href=url text=name blank=true line=null noLine=true}}</div>
                                            <br>
                                            <div><p>{{about}}</p></div>
                                            <br>

                                            <div><em>Project stacks ({{stackAmount}})</em></div>

                                            <br>

                                            <div>
                                                <ul>
                                                    {{#each stacks}}
                                                                <li>{{name}}</li>
                                                    {{/each}}
                                                </ul>
                                            </div>

                                            <br>

                                            <div><em>Projects awards ({{avardAmount}})</em></div>

                                            <br>

                                            <div>
                                                <ul>
                                                    {{#each avards}}
                                                            <li>{{name}}</li>
                                                    {{/each}}
                                                </ul>
                                            </div>
                                            
                                        </li>
                                        {{/each}}
                                    </ul>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </section>
            {{/with}}
    </main>

</div>

